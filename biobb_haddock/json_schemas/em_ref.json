{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_haddock/json_schemas/1.0/em_ref",
    "name": "biobb_haddock EMRef",
    "title": "Wrapper class for the HADDOCK3 EMRef module.",
    "description": "The EMRef module. HADDOCK3 EMRef module computes an energy minimization refinement over selected structures.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "HADDOCK3",
            "version": "2025.5",
            "license": "Apache-2.0"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_haddock_wf_data",
        "output_haddock_wf_data"
    ],
    "properties": {
        "input_haddock_wf_data": {
            "type": "dir",
            "description": "Path to the input directory containing all the current Haddock workflow data",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_haddock/raw/master/biobb_haddock/test/data/haddock/haddock_wf_data_topology.zip",
            "enum": [
                ".*\\.directory$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.directory$",
                    "description": "Path to the input directory containing all the current Haddock workflow data",
                    "edam": "format_1915"
                }
            ]
        },
        "output_haddock_wf_data": {
            "type": "dir",
            "description": "Path to the output directory containing all the current Haddock workflow data",
            "filetype": "output",
            "sample": null,
            "enum": [
                ".*\\.directory$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.directory$",
                    "description": "Path to the output directory containing all the current Haddock workflow data",
                    "edam": "format_1915"
                }
            ]
        },
        "refinement_output_zip_path": {
            "type": "string",
            "description": "Path to the output PDB file collection in zip format",
            "filetype": "output",
            "sample": "https://raw.githubusercontent.com/bioexcel/biobb_haddock/master/biobb_haddock/test/reference/haddock/ref_rigidbody.zip",
            "enum": [
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Path to the output PDB file collection in zip format",
                    "edam": "format_3987"
                }
            ]
        },
        "ambig_restraints_table_path": {
            "type": "string",
            "description": "Path to the input TBL file containing a list of ambiguous restraints for docking",
            "filetype": "input",
            "sample": "https://raw.githubusercontent.com/bioexcel/biobb_haddock/master/biobb_haddock/test/data/haddock/e2a-hpr_air.tbl",
            "enum": [
                ".*\\.tbl$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.tbl$",
                    "description": "Path to the input TBL file containing a list of ambiguous restraints for docking",
                    "edam": "format_2330"
                }
            ]
        },
        "unambig_restraints_table_path": {
            "type": "string",
            "description": "Path to the input TBL file containing a list of unambiguous restraints for docking",
            "filetype": "input",
            "sample": "https://raw.githubusercontent.com/bioexcel/biobb_haddock/master/biobb_haddock/test/data/haddock/e2a-hpr_air.tbl",
            "enum": [
                ".*\\.tbl$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.tbl$",
                    "description": "Path to the input TBL file containing a list of unambiguous restraints for docking",
                    "edam": "format_2330"
                }
            ]
        },
        "hb_restraints_table_path": {
            "type": "string",
            "description": "Path to the input TBL file containing a list of hydrogen bond restraints for docking",
            "filetype": "input",
            "sample": "https://raw.githubusercontent.com/bioexcel/biobb_haddock/master/biobb_haddock/test/data/haddock/e2a-hpr_air.tbl",
            "enum": [
                ".*\\.tbl$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.tbl$",
                    "description": "Path to the input TBL file containing a list of hydrogen bond restraints for docking",
                    "edam": "format_2330"
                }
            ]
        },
        "haddock_config_path": {
            "type": "string",
            "description": "Haddock configuration CFG file path",
            "filetype": "input",
            "sample": "https://raw.githubusercontent.com/bioexcel/biobb_haddock/master/biobb_haddock/test/data/haddock/run.cfg",
            "enum": [
                ".*\\.cfg$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.cfg$",
                    "description": "Haddock configuration CFG file path",
                    "edam": "format_1476"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "cfg": {
                    "type": "object",
                    "default": {},
                    "wf_prop": false,
                    "description": "Haddock configuration options specification."
                },
                "global_cfg": {
                    "type": "object",
                    "default": {
                        "postprocess": false
                    },
                    "wf_prop": false,
                    "description": "Global configuration options specification."
                },
                "binary_path": {
                    "type": "string",
                    "default": "haddock",
                    "wf_prop": false,
                    "description": "Path to the haddock haddock executable binary."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                },
                "sandbox_path": {
                    "type": "string",
                    "default": "./",
                    "wf_prop": true,
                    "description": "Parent path to the sandbox directory."
                },
                "container_path": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the binary executable of your container."
                },
                "container_image": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Container Image identifier."
                },
                "container_volume_path": {
                    "type": "string",
                    "default": "/data",
                    "wf_prop": false,
                    "description": "Path to an internal directory in the container."
                },
                "container_working_dir": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the internal CWD in the container."
                },
                "container_user_id": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "User number id to be mapped inside the container."
                },
                "container_shell_path": {
                    "type": "string",
                    "default": "/bin/bash",
                    "wf_prop": false,
                    "description": "Path to the binary executable of the container shell."
                }
            }
        }
    },
    "additionalProperties": false
}